    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Debug poker-tournament-visualization in Firefox",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}//poker-tournament-visualization"
        },
        {
            "command": "npm start",
            "name": "Start poker-tournament-visualization",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/poker-tournament-visualization"
        },
        {
            "name": "Python: tests",
            "type": "python",
            "request": "launch",
            "purpose": [
                "debug-test"
            ],
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Main",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Challenge",
            "type": "python",
            "request": "launch",
            "program": "challenge.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: read_results",
            "type": "python",
            "request": "launch",
            "program": "read_results.py",
            "console": "integratedTerminal"
        }
    ]
}